<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/showmonth"
        android:layout_below="@+id/title"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"
            android:rotation="90"
            android:layout_toLeftOf="@+id/carrier"
            />
        <TextView
            android:id="@+id/carrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cut"
            android:src="@drawable/arrow"
            android:rotation="270"
            android:layout_toRightOf="@+id/carrier"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/eletitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/choice"
        android:layout_marginTop="10dp"
        android:background="#FFBB66"
        android:padding="6dp">
        <TextView
            android:id="@+id/elechecktitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:text="日期"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/eleday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:text="統一編號"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/elechecktitle"
            />
        <TextView
            android:id="@+id/elenul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/eleday"
            android:layout_marginLeft="40dp"
            android:textColor="#000000"
            android:text="金額"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eleamount"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="#000000"
            android:text="捐獻機構"
            android:textSize="18sp"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="40sp"
        android:textColor="#FF3333"
        android:gravity="center"
        android:visibility="gone"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclenul"
        android:layout_width="match_parent"
        android:layout_below="@+id/eletitle"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>