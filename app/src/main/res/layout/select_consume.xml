<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/PIdateL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">
            <ImageView
                android:id="@+id/PIdateCut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/PIdateTittle"
                android:rotation="90"
                android:src="@drawable/arrow" />
            <TextView
                android:id="@+id/PIdateTittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="20sp" />
            <ImageView
                android:id="@+id/PIdateAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/PIdateTittle"
                android:rotation="270"
                android:src="@drawable/arrow" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/timeIn"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:background="#aaaaaa"
            android:layout_centerHorizontal="true"
            android:layout_height="40dp"
            >
            <Spinner
                android:gravity="center"
                android:id="@+id/choiceCarrier"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:theme="@style/spinner_normal"
                android:backgroundTint="#000000"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            </Spinner>
            <Spinner
                android:gravity="center"
                android:id="@+id/choicePeriod"
                android:theme="@style/spinner_normal"
                android:backgroundTint="#000000"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            </Spinner>
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="#f5f5f5"
                android:layout_toRightOf="@+id/choiceCarrier"
                android:layout_toLeftOf="@+id/choicePeriod"
                />
        </RelativeLayout>
        <TextView
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:id="@+id/describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            />
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart_pie"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#f5f5f5"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="250dp">
        </com.github.mikephil.charting.charts.PieChart>
        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:id="@+id/goalConsume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:bootstrapBrand="danger"
            android:textSize="20sp"
            />
        <com.github.mikephil.charting.charts.BarChart
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:id="@+id/chart_bar"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>
    </LinearLayout>
</ScrollView>