<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/PIdateL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/PIdateCut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/PIdateTittle"
                android:rotation="90"
                android:src="@drawable/arrow" />
            <TextView
                android:id="@+id/PIdateTittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="20sp" />
            <ImageView
                android:id="@+id/PIdateAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/PIdateTittle"
                android:rotation="270"
                android:src="@drawable/arrow" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/timeIn"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年"
                android:background="#aaaaaa"
                android:textSize="18sp"
                />
            <Button
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月"
                android:layout_toRightOf="@+id/year"
                android:background="#aaaaaa"
                android:textSize="18sp"
                />
            <Button
                android:id="@+id/week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周"
                android:layout_toRightOf="@+id/month"
                android:background="#aaaaaa"
                android:textSize="18sp"
                />
            <Button
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日"
                android:layout_toRightOf="@+id/week"
                android:background="#aaaaaa"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="40sp"
                android:textColor="#FF3333"
                android:gravity="center"
                android:visibility="gone"
                />
        </RelativeLayout>
        <com.github.mikephil.charting.charts.BarChart
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/chart_bar"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>
    </LinearLayout>
</ScrollView>