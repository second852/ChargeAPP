<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/PIdateL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DRshow"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/PIdateCut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/PIdateTittle"
            android:rotation="90"
            android:src="@drawable/arrow" />

        <TextView
            android:id="@+id/PIdateTittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/PIdateAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/PIdateTittle"
            android:rotation="270"
            android:src="@drawable/arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/DRtittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PIdateL"
        android:layout_marginTop="10dp"
        android:background="#FFBB66"
        android:orientation="horizontal"
        android:padding="6dp">

        <TextView
            android:id="@+id/DRdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:text="鍵盤"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/QrCodeA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/DRdate"
            android:text="QRcode"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/QrCodeA"
            android:text="聲音"
            android:textColor="#000000"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/priceTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/DRtittle"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="請輸入後三碼"
        android:textColor="#000000"
        android:textSize="15sp" />
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/priceTitle"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:padding="6dp"
        card_view:cardBackgroundColor="#ffdddddd"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="6dp">
            <TextView
                android:id="@+id/inputNul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="25dp"
                android:gravity="right"
                android:hint="000"
                android:textColorHint="#666666"
                android:textColor="#000000"
                android:textSize="40sp" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/cardview"
        android:id="@+id/donateRL"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>