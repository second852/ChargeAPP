<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">




    <LinearLayout
        android:id="@+id/searchL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/keyName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#AAAAAA"
            app:bootstrapBrand="primary"
            app:roundedCorners="true"
            app:bootstrapSize="lg"
            />
        <ImageView
            android:layout_marginLeft="20dp"
            android:src="@drawable/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            />
    </LinearLayout>


    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_marginTop="10dp"
        android:id="@+id/searchSettingShow"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="visible"
        android:layout_below="@+id/searchL"
        app:bootstrapBrand="primary"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="true"
        app:roundedCorners="true"
        />

    <ListView
        android:id="@+id/list"
        android:layout_below="@id/searchSettingShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/adView"
       />






    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="#FF7744"
        android:textSize="26sp"
        android:visibility="gone" />


   <RelativeLayout
       android:layout_width="250dp"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_centerVertical="true"
       android:visibility="gone"
       android:background="#dddddd"
       >
       <LinearLayout
           android:layout_marginTop="20dp"
           android:id="@+id/timeCheckL"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           >
           <CheckBox
               android:id="@+id/timeCheck"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:buttonTint="#00BBFF"
               android:visibility="visible"
               android:textColor="#000000"
               android:textSize="20sp" />
           <TextView
               android:id="@+id/fixDateT"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:text="時間"
               android:textColor="#000000"
               android:gravity="center"
               />
       </LinearLayout>

       <LinearLayout
           android:id="@+id/beginL"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:layout_below="@+id/timeCheckL"
           android:layout_marginStart="20dp"
           android:layout_marginEnd="20dp"
           android:orientation="horizontal">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:gravity="center_vertical"
               android:text="起日"
               android:textColor="#000000"
               android:textSize="20sp" />

           <com.beardedhen.androidbootstrap.BootstrapEditText
               android:id="@+id/beginD"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:layout_marginStart="10dp"
               android:gravity="center_vertical"
               android:singleLine="true"
               android:textColor="#000000"
               app:bootstrapBrand="primary"
               app:roundedCorners="true"
               app:bootstrapSize="lg"
               />
       </LinearLayout>

       <LinearLayout

           android:id="@+id/endL"
           android:layout_marginStart="20dp"
           android:layout_marginEnd="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:layout_below="@+id/beginL"
           android:orientation="horizontal">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:gravity="center_vertical"
               android:text="迄日"
               android:textColor="#000000"
               android:textSize="20sp" />

           <com.beardedhen.androidbootstrap.BootstrapEditText
               android:id="@+id/endD"
               android:layout_marginStart="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:gravity="center_vertical"
               android:singleLine="true"
               android:textColor="#000000"
               app:bootstrapBrand="primary"
               app:roundedCorners="true"
               app:bootstrapSize="lg"
               />
       </LinearLayout>

       <com.beardedhen.androidbootstrap.BootstrapDropDown
           android:layout_marginTop="10dp"
           android:id="@+id/scope"
           android:layout_marginBottom="20dp"
           android:layout_below="@+id/endL"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           app:bootstrapBrand="regular"
           app:bootstrapExpandDirection="up"
           app:bootstrapSize="sm"
           app:bootstrapText="全部 {fa_calendar}"
           app:dropdownResource="@array/searchScope"
           app:roundedCorners="true"
           app:showOutline="true"
           />
   </RelativeLayout>









    <View
        android:id="@+id/fabBGLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTransBg"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/insertMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:clipToPadding="false"
        android:layout_marginEnd="23dp"
        android:gravity="center"
        android:layout_above="@+id/adView"
        android:layout_marginBottom="23dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新增收入"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:backgroundTint="@color/bootstrap_brand_primary"
            app:srcCompat="@drawable/property_add"
            app:fabSize="mini"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/insertConsume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:clipToPadding="false"
        android:layout_marginEnd="23dp"
        android:gravity="center"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/adView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新增支出"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:backgroundTint="@color/bootstrap_brand_primary"
            app:srcCompat="@drawable/property_cut"
            app:fabSize="mini"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/returnMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:clipToPadding="false"
        android:layout_marginEnd="23dp"
        android:gravity="center"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/adView"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/property_back"
            app:backgroundTint="@color/bootstrap_brand_primary"
            app:fabSize="mini"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:clipToPadding="false"
        android:padding="12dp"
        android:layout_marginBottom="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:gravity="center_vertical"
            app:srcCompat="@drawable/ic_toys"
            app:backgroundTint="@color/bootstrap_brand_primary"
            app:fabSize="normal"/>
    </LinearLayout>


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-5169620543343332/7840595330" />


</RelativeLayout>