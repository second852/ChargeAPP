<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">




    <LinearLayout
        android:id="@+id/searchL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/keyName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="true"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#AAAAAA"
            app:bootstrapBrand="primary"
            app:roundedCorners="true"
            app:bootstrapSize="lg"
            />
        <ImageView
            android:id="@+id/search"
            android:layout_marginStart="10dp"
            android:src="@drawable/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            />
    </LinearLayout>


    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_marginTop="10dp"
        android:id="@+id/searchSettingShow"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:layout_below="@+id/searchL"
        app:bootstrapBrand="primary"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="true"
        app:roundedCorners="true"
        />

    <ListView
        android:id="@+id/list"
        android:layout_marginTop="10dp"
        android:layout_below="@id/searchL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adView"
       />






    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="#FF7744"
        android:textSize="26sp"
        android:visibility="gone" />


   <RelativeLayout
       android:id="@+id/settingR"
       android:layout_width="250dp"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_centerVertical="true"
       android:visibility="gone"
       android:background="#dddddd"
       >
       <LinearLayout
           android:layout_marginTop="10dp"
           android:id="@+id/timeCheckL"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           >
           <CheckBox
               android:id="@+id/timeCheck"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:buttonTint="#00BBFF"
               android:visibility="visible"
               android:textColor="#000000"
               android:textSize="20sp" />
           <TextView
               android:id="@+id/fixDateT"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:text="時間"
               android:textColor="#000000"
               android:gravity="center"
               />
       </LinearLayout>

       <LinearLayout
           android:visibility="gone"
           android:id="@+id/beginL"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:layout_below="@+id/timeCheckL"
           android:layout_marginStart="20dp"
           android:layout_marginEnd="20dp"
           android:orientation="horizontal">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:gravity="center_vertical"
               android:text="起日"
               android:textColor="#000000"
               android:textSize="20sp" />

           <com.beardedhen.androidbootstrap.BootstrapEditText
               android:id="@+id/beginD"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:layout_marginStart="10dp"
               android:gravity="center_vertical"
               android:singleLine="true"
               android:textColor="#000000"
               android:inputType="date"
               app:bootstrapBrand="primary"
               app:roundedCorners="true"
               app:bootstrapSize="lg"
               />
       </LinearLayout>

       <LinearLayout
           android:visibility="gone"
           android:id="@+id/endL"
           android:layout_marginStart="20dp"
           android:layout_marginEnd="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:layout_below="@+id/beginL"
           android:orientation="horizontal">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:gravity="center_vertical"
               android:text="迄日"
               android:textColor="#000000"
               android:textSize="20sp" />

           <com.beardedhen.androidbootstrap.BootstrapEditText
               android:id="@+id/endD"
               android:layout_marginStart="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:gravity="center_vertical"
               android:singleLine="true"
               android:textColor="#000000"
               android:inputType="date"
               app:bootstrapBrand="primary"
               app:roundedCorners="true"
               app:bootstrapSize="lg"
               />
       </LinearLayout>

       <com.beardedhen.androidbootstrap.BootstrapDropDown
           android:layout_marginTop="10dp"
           android:id="@+id/scope"

           android:layout_below="@+id/endL"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           app:bootstrapBrand="regular"
           app:bootstrapExpandDirection="up"
           app:bootstrapSize="sm"
           app:bootstrapText="範圍 {fa_tag}"
           app:dropdownResource="@array/searchScope"
           app:roundedCorners="true"
           app:showOutline="true"
           />
       <com.beardedhen.androidbootstrap.BootstrapButton
           android:layout_marginTop="10dp"
           android:id="@+id/searchSetting"
           android:layout_below="@+id/scope"
           android:layout_centerHorizontal="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#000000"
           app:bootstrapBrand="warning"
           app:bootstrapSize="lg"
           app:buttonMode="regular"
           app:showOutline="false"
           app:roundedCorners="true"
           app:bootstrapText="設定 {fa_search_plus}"
           android:layout_marginBottom="10dp"
           />
   </RelativeLayout>

    <LinearLayout
        android:id="@+id/showDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:visibility="gone"
        >
        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:theme="@style/spinner_normal"
            android:spinnersShown="true">
        </DatePicker>
        <TextView
            android:id="@+id/dateSave"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="5dp"
            android:background="#BDBDBD"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="確認"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-5169620543343332/7840595330" />


</RelativeLayout>