<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="捐贈發票"
        android:background="#aaaaaa"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="25sp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/showmonth"
        android:layout_below="@+id/title"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"
            android:rotation="90"
            android:layout_toLeftOf="@+id/carrier"
            />
        <TextView
            android:id="@+id/carrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cut"
            android:src="@drawable/arrow"
            android:rotation="270"
            android:layout_toRightOf="@+id/carrier"
            />
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/choice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/showmonth"
            android:layout_marginTop="10dp"
            >
            <Button
                android:id="@+id/choiceall"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dp"
                android:text="全選"
                android:textSize="20sp"
                android:background="#66FF66"
                android:layout_toLeftOf="@+id/save"
                />
            <Button
                android:id="@+id/save"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="#33CCFF"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="確定"
                android:textColor="#000000"
                android:textSize="20sp"
                />
            <Button
                android:id="@+id/cancel"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/save"
                android:layout_centerVertical="true"
                android:background="#FF8888"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:text="取消"
                android:textColor="#000000"
                android:textSize="20sp"
                />
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/eletitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/choice"
        android:layout_marginTop="10dp"
        android:background="#FFBB66"
        android:padding="6dp">
        <TextView
            android:id="@+id/elechecktitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:text="勾選"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/eleday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:text="日期"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/elechecktitle"
            />
        <TextView
            android:id="@+id/elenul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/eleday"
            android:layout_marginLeft="40dp"
            android:textColor="#000000"
            android:text="統一編號"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eleamount"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:textColor="#000000"
            android:text="金額"
            android:textSize="18sp"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="40sp"
        android:textColor="#FF3333"
        android:gravity="center"
        android:visibility="gone"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclenul"
        android:layout_width="match_parent"
        android:layout_below="@+id/eletitle"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:id="@+id/searchRL"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#aaaaaa"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/searchHTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查詢的愛心碼/統編之關鍵字"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#000000"
            />
        <EditText
            android:id="@+id/inputH"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/searchHTitle"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:inputType="text"
            android:background="#ffffff"
            android:textColor="#000000"
            />
        <ImageView
            android:id="@+id/searchI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search"
            android:layout_below="@+id/searchHTitle"
            android:layout_toRightOf="@+id/inputH"
            android:layout_marginLeft="15dp"
            />
        <ListView
            android:id="@+id/heartyList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/searchI"
            >
        </ListView>
    </RelativeLayout>
</RelativeLayout>