<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/howgetpage"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context="com.chargeapp.whc.chargeapp.Control.MainActivity">
    <TextView
        android:id="@+id/needCarrier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="30sp"
        android:text="1.準備身分證和實體發票\n"
        android:gravity="left"
        android:layout_marginTop="10dp"
        />
    <ListView
        android:layout_marginTop="10dp"
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/needCarrier"
        />
    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/button"
        android:text="財政部統一發票兌獎APP下載"
        android:layout_below="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:bootstrapBrand="regular"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="true"
        />
</RelativeLayout>
