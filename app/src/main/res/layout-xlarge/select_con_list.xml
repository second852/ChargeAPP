<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/DRshow"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/DRcut"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/arrow"
            android:rotation="90"
            android:layout_toLeftOf="@+id/DRcarrier"
            />
        <TextView
            android:id="@+id/DRcarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="40sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/DRadd"
            android:src="@drawable/arrow"
            android:rotation="270"
            android:layout_toRightOf="@+id/DRcarrier"
            />
    </RelativeLayout>
    <ListView
            android:id="@+id/list"
            android:layout_marginTop="10dp"
            android:layout_above="@+id/adView"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/DRshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    </ListView>
    <TextView
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message"
        android:textSize="46sp"
        android:textColor="#FF7744"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-5169620543343332/5257007139"/>
</RelativeLayout>