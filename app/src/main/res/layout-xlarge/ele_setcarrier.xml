<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.chargeapp.whc.chargeapp.Control.MainActivity">

    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:background="#FFA488"
        android:gravity="center"
        android:text="記帳小助手"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="手機條碼"
        android:textColor="#000000"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/cellphone"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#FFEE99"
        android:gravity="center"
        android:hint="/XXXXXXX"
        android:inputType="text"
        android:textColor="#000000"
        android:singleLine="true"
        android:textColorHint="#AAAAAA" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="驗證碼"
        android:textColor="#000000"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/certcode"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#FFEE99"
        android:textColor="#000000"
        android:gravity="center"
        android:hint="XXXX"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColorHint="#AAAAAA" />
    <Button
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="確認"
        android:background="#33CCFF"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        />
    <TextView
        android:id="@+id/listtiitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="目前綁定的載具"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:background="#aaaaaa"
        android:visibility="gone"
        />
    <ListView
        android:id="@+id/listcarrier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
