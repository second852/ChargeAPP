<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/carrierR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/carrierT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="請選擇載具"
            android:textSize="40sp"
            android:textColor="#000000"
            android:layout_toLeftOf="@+id/carrier"
            />
        <Spinner
            android:layout_marginTop="15dp"
            android:id="@+id/carrier"
            android:theme="@style/spinner_xlarge"
            android:layout_below="@+id/mainTitle"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Spinner>
        <TextView
            android:id="@+id/enter"
            android:layout_marginTop="15dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toRightOf="@+id/carrier"
            android:layout_below="@+id/mainTitle"
            android:text="確定"
            android:textSize="40sp"
            android:textColor="#000000"
            android:background="#33CCFF"
            android:layout_marginLeft="25dp"
            />
        <TextView
            android:id="@+id/carrierM"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FF0000"
            android:textSize="30sp"
            android:visibility="visible"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
        <WebView
            android:id="@+id/webView"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/carrierR"
            android:visibility="visible"
            >
        </WebView>
        <ProgressBar
            android:id="@+id/myProgressBar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
    <TextView
        android:id="@+id/showError"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="#FF3333"
        android:textSize="40sp"
        android:text="財政部雲端發票整合服務平台忙線中!"
        android:visibility="gone"
        />
</RelativeLayout>